#myModal.modal.fade
  / modal-sm or modal-lg can be used here
  .modal-dialog
    .modal-content
      / Modal Header
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
        %h4.modal-title Login
      / Modal Body w
      .modal-body
        = form_for :user, :url => session_path(:user) do |f|
          .form-group
            .row
              .col-md-4
                = f.label :email
                %br/
                = f.email_field :email, :class => ["full-width"], :autofocus => true
              .col-md-4
                = f.label :password
                %br/
                = f.password_field :password, :autocomplete => "off"

              - if devise_mapping.rememberable?
                .col-md-4
                  = f.check_box :remember_me
                  = f.label :remember_me
                  = f.submit "Log in", :class => "btn btn-primary full-width"

          -#= render "devise/shared/links"

