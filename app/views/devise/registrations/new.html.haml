%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true, :class => "user-input"
  %div
    = f.label :password
    - if @validatable
      %i
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, :autocomplete => "off", :class => "user-input"
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, :autocomplete => "off", :class => "user-input"

  %br/
  %div= f.submit "Sign up", :class => "btn btn-large btn-primary user-input"

= render "devise/shared/links"
