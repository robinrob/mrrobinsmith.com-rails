<h1>Blog Post Admin</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="2"></th>
    </tr>

    <% @blogposts.each do |blogpost| %>
        <tr>
            <td><%= blogpost.title %></td>
            <td><%= blogpost.body %></td>
            <td><%= link_to 'Show', blogpost_path(blogpost) %></td>
            <td><%= link_to 'Edit', edit_blogpost_path(blogpost) %></td>
            <td><%= link_to 'Delete', blogpost_path(blogpost), :method => "delete" %></td>
        </tr>
    <% end %>
</table>