.page-header
    %h1 Robin Smith Software Blog

    =form_for :blogpost, :url => blogposts_path do |f|
        .form-group
            .row
                .col-md-12
                    =f.label :title, :maxlength => "254"
                    %br/
                    =f.text_field :title, :class => "blog-input"

            .row
                .col-md-12
                    =f.label :body, :maxlength => "254"
                    %br/
                    =f.text_area :body, :class => "blog-input blog-text"

            .row
                .col-md-12
                    =f.label ""
                    <br>
                    =f.submit "Create Post", :class => "btn btn-large btn-primary blog-input"