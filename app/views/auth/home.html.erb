<div class="row" id="form">
  <div class="span6">
    <%= form_for ("Robin"), :url => "/" do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Login", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>