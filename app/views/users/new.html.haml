.page-header
  %h1 Signup!
= form_for :user, :url => users_path do |f|
  .form-group
    .row
      .col-md-12
        = f.label :email
        %br/
        = f.text_field :email, :class => 'user-input'
    .row
      .col-md-12
        = f.label :password
        %br/
        = f.password_field :password, :class => 'user-input'
    .row
      .col-md-12
        = f.label ""
        %br/
        = f.submit "Sign Up!", :class => "btn btn-large btn-primary user-input"
