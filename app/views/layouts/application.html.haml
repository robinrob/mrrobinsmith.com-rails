!!! Strict

%html
%head
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
  %meta{:name => "description", :content => "= content_for?(:description) ? yield(:description) : 'RailsBootstrap'>"}
  %title Robin Smith Software
  = stylesheet_link_tag 'application', :media => 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags

%body
%header
  = render 'navigation'

%main{:role => "main"}
  = render 'messages'

  .container
    = yield


  = render 'wanker'


  = render 'navigation_bottom'